{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": ".",
    "paths": {
      "@pump-bundler/types": ["./shared/types"],
      "@pump-bundler/constants": ["./shared/constants"],
      "@pump-bundler/utils": ["./shared/utils"],
      "@pump-bundler/core": ["./packages/core"],
      "@pump-bundler/core/*": ["./packages/core/*"],
      "@pump-bundler/cli": ["./packages/cli"],
      "@pump-bundler/web": ["./packages/web"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts"]
}
